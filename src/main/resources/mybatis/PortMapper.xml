<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dos.bsapp.dao.PortDao">
	<select id="aPortList" resultType="com.dos.bsapp.model.Port">
	   select 
	    id,
        title,
        setting,
        is_lock as isLock,
        created
		from bs_port
	</select>

  <select id="findByTitle" resultType="com.dos.bsapp.model.Port">
    select
    id,
    title,
    setting,
    is_lock as isLock,
    created
    from bs_port where title = #{title}
  </select>


  
  <select id="get" resultType="com.dos.bsapp.model.Port">
    select
    id,
    title,
    setting,
    is_lock as isLock,
    created
    from bs_port
    where id = #{id}
  </select>

  <insert id="addPort" keyProperty="id" useGeneratedKeys="true" parameterType="com.dos.bsapp.model.Port">
    insert into bs_port (title,setting,is_lock,created) values
    (#{title},#{setting},#{isLock},NOW());

    <selectKey keyProperty="id" resultType="java.lang.Integer" order="AFTER">
      SELECT LAST_INSERT_ID();
    </selectKey>
  </insert>

  <update id="editSetting">
    update bs_port set setting = #{setting}
    where id = #{id}
  </update>

  <update id="editLockStatus">
    update bs_port set is_lock = #{isLock}
    where id = #{id}
  </update>
</mapper>